
<body>
  <%= render "recipes/navbar"%>
  <div class ="main">
    <div class ="card shadow">
      <div class ="card-header">
        <h1>Sign up</h1>
      </div>
      <div class ="card-body">
        <%= form_with model: @user, url: '/users', mehod: :post, class: 'registration-main', local: true do |f| %>
        <%= render 'devise/shared/error_messages', model: f.object %>
          <div class ="form-main">
            <%= f.label :name %><br \>
            <%= f.text_field :name, class: "form-control" %>
          </div><!--form-main-->
          <div class ="form-main">
            <%= f.label :email %><br \>
            <%= f.email_field :email, class: "form-control" %>
          </div><!--form-main-->
          <div class ="form-main">
            <%= f.label :password %><br \>
            <%= f.password_field :password, class: "form-control" %>
          </div><!--form-main-->
          <div class ="form-main">
            <%= f.label :password_confirmation %><br \>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div><!--form-main-->
          <div class ="form-main">
            <div class ="form-submit">
            <%= f.submit "登録",class: "btn btn-primary" %>
            </div>
          <% end %>
      </div>
    </div> <!--card-->
  </div> <!--main-->
</body>