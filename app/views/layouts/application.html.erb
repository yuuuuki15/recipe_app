<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  <!-- ナビゲーションバー -->
  <nav class="navbar navbar-light fixed-top">
    <!-- タイトル -->
    <a class="navbar-brand" href="/">Recipe_app</a>
    <% if user_signed_in? %>
    <%= link_to 'レシピを投稿する', new_recipe_path%>
    <% end %>
<!-- ハンバーガーメニュー -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- ナビゲーションメニュー -->
    <div class="collapse navbar-collapse" id="navbarNav">
    <div class = "card-container-body">
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'マイページ', user_path(current_user, beginning_of_week: Date.today.beginning_of_week), class: "without-border" %>
          </li>
          <li class="nav-item">
            <%= link_to '買い物リスト', lists_path, class: "without-border" %>
          </li>
          <li class="nav-item">
            <%= link_to 'マイフォルダ', favorites_path, class: "without-border" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "without-border" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path, class: "without-border" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: "without-border" %>
          </li>
        <% end %>
      </ul>
      </div>
    </div>
  </nav>
  </header>
    <%= yield %>
  </body>
</html>
